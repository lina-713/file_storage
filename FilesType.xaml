<Window x:Class="kurs_rab.FilesType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurs_rab"
        mc:Ignorable="d"
        Title="FilesType" Height="450" Width="800">
    <Grid>
        <DataGrid Name ="filestype_grid" HorizontalAlignment="Center" Height="277" Margin="0,32,0,0" VerticalAlignment="Top" Width="728" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Name ="AddButt" Content="Добавить" HorizontalAlignment="Left" Margin="36,336,0,0" VerticalAlignment="Top" Width="123" Height="33" Click="AddButt_Click"/>
        <Button Name ="UpdateButt" Content="Изменить" HorizontalAlignment="Left" Margin="231,336,0,0" VerticalAlignment="Top" Width="123" Height="33" Click="UpdateButt_Click"/>
        <Button Name ="DeleteButt" Content="Удалить" HorizontalAlignment="Left" Margin="421,336,0,0" VerticalAlignment="Top" Width="123" Height="33" Click="DeleteButt_Click"/>

    </Grid>
</Window>
