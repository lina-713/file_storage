<Window x:Class="kurs_rab.Files"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurs_rab"
        mc:Ignorable="d"
        Title="Files" Height="450" Width="800">
    <Grid>
        <Button Name ="AddButt" Content="Добавить" HorizontalAlignment="Left" Height="39" Margin="36,348,0,0" VerticalAlignment="Top" Width="126" Click="AddButt_Click"/>
        <Button Name ="UpdateButt" Content="Изменить" HorizontalAlignment="Left" Height="39" Margin="209,348,0,0" VerticalAlignment="Top" Width="126" Click="UpdateButt_Click"/>
        <Button Name ="DeleteButt" Content="Удалить" HorizontalAlignment="Left" Height="39" Margin="373,348,0,0" VerticalAlignment="Top" Width="126" Click="DeleteButt_Click"/>
        <Button Content="Вывод таблицы" HorizontalAlignment="Left" Height="39" Margin="538,348,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click"/>
        <DataGrid Name ="filesGrid" HorizontalAlignment="Left" Height="289" Margin="36,24,0,0" VerticalAlignment="Top" Width="704" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
